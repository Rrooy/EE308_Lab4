<view class='com-selectBox'>
    <view class='com-sContent' bindtap='selectToggle'>
        <view class='com-sTxt'>{{nowText}}</view>
        <image src='http://m.qpic.cn/psc?/V53b6AhA0HpGbV45Hl7U09DkVH0EnDXo/ruAMsa53pVQWN7FLK88i5hSYzeJwnFSG6QqA.z3eGR6TwTQZx0zxHrFmN5gST655Hp2YDt*Jh4KLpj5Wq86.PolLx4AuN2*mo50tjTcV*GY!/mnull&bo=BAEEAQAAAAABByA!&rf=photolist&t=5'  class='com-sImg'  animation="{{animationData}}"></image>
    </view>
    <view class='com-sList' wx:if="{{selectShow}}">
        <view wx:for="{{propArray}}" data-index="{{index}}" wx:key='' class='com-sItem' bindtap='setText'>{{item.text}}</view>
    </view>
</view>